<h1>Profiles</h1>

<% if @profiles %>
  <% @profiles.each do |profile| %>
  <%= image_tag profile.avatar.url(:thumb) if profile.avatar.url %>
  <p><%= profile.cohort %></p>
  <p><%= profile.first_name %> <%= profile.last_name %></p>
  <p><%= profile.city %></p>
  <p><%= profile.country %></p>
  <% end %>
<% else %>
		<p>No profiles here.</p>
<% end %>