<div class="container">
<% if @profiles %>
  <% @profiles.each do |profile| %>

<div class="col xs-12 col-md-6">
<%= link_to user_profile_path(profile.user) do %>
<div class="card card-horizontal max-height-150">
    <div class="row">
        <div class="col-md-4 col-sm-4 col-xs-4">
            <div class="max-150-width no-overflow">
                      <%= image_tag profile.avatar.url(:small), {class: 'min-150'} if profile.avatar.url %>
        
                <div class="filter filter-azure">
                    <button type="button" class="btn btn-neutral btn-round">
                        <i class="fa fa-user"></i> View
                    </button>
                </div>
            </div>
        </div>
        <div class="col-md-8">
             <div class="content">
               <p class="category text-info">
                  <%= profile.cohort %>
                </p>

                <a class="card-link" href="#">
                    <h4 class="title"><%= profile.first_name %> <%= profile.last_name %></h4>
                </a>
                  <a class="card-link" href="#">
                <% if profile.user.employers.any? %>
                  <p class="description"><%= profile.user.employers.last.role %> @ <span><%= profile.user.employers.last.company_name %></span></p>
                <% else %>
                  <p class="description">No employment history</p>
                <% end %>
                  </a>

                 <div class="footer">
                    <div class="stats">
                        <a class="card-link" href="#">
                           <i class="fa fa-male"></i> Github
                        </a>
                    </div>

                    <div class="stats">
                        <a class="card-link" href="#">
                           <i class="fa fa-male"></i> Portfolio
                        </a>
                    </div>

                    <div class="stats">
                      <a class="card-link" href="#">
                        <i class="fa fa-comments"></i> Linkedin
                      </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div> <!-- end card -->
          
</div> <!-- col-6-md -->
<% end %>
  <% end %>

<% else %>
    <p>No profiles here.</p>
<% end %>
