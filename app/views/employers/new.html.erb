<div class="container">
  <div class="col-md-6">
  <h4>Add your employment details and save:</h4>
    <div class="form-group">

<%= form_for([@user, @employer]) do |f| %>
<%= f.text_field :company_name, placeholder: "Company Name", class: 'form-control' %>
<br>
<%= f.text_field :role, placeholder: "Role", class: 'form-control' %>
<br>
<%= f.text_field :city, placeholder: "City", class: 'form-control' %>
<br>
<%= f.text_field :country, placeholder: "Country", class: 'form-control' %>
<br>
<%= f.label "Start Date" %>
<%= f.date_field :start_date, class: 'form-control' %>
<br>
<%= f.label "End Date" %>
<%= f.date_field :end_date, class: 'form-control' %>
<br>
<%= f.submit "Save", class: 'form-control btn btn-info btn-fill' %>
<% end %>

	</div>
</div>
</div>
