<div class="container">
  <div class="col-md-6">
  <h4>Add your employment details and save:</h4>
    <div class="form-group">

<%= form_for([@user, @employer]) do |f| %>
<%= f.text_field :company_name, placeholder: "Company Name" %>
<br>
<%= f.text_field :role, placeholder: "Role" %>
<br>
<%= f.text_field :city, placeholder: "City" %>
<br>
<%= f.text_field :country, placeholder: "Country" %>
<br>
<%= f.date_field :start_date %>
<br>
<%= f.date_field :end_date %>
<br>
<%= f.submit "Save" %>
<% end %>

	</div>
</div>
</div>
